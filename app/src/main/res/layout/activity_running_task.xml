<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_running_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.iridiobis.temporizador.presentation.ui.runningtask.RunningTaskActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/rt_status_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"/>

    <TextView
        android:id="@+id/rt_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_alignBottom="@id/rt_status_fab"
        android:layout_alignTop="@id/rt_status_fab"
        android:layout_toLeftOf="@id/rt_status_fab"/>

</RelativeLayout>
