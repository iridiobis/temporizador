<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_running_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.iridiobis.temporizador.presentation.ui.runningtask.RunningTaskActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/scrim_semi_to_black">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/rt_status_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/colorIcons"
            app:srcCompat="@drawable/ic_pause"/>

        <TextView
            android:id="@+id/rt_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorIcons"
            android:layout_toLeftOf="@id/rt_status_fab"/>

    </RelativeLayout>

</FrameLayout>
