<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nti_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.iridiobis.temporizador.presentation.ui.edittask.WriteTaskActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteOverlay">

        <ImageView
            android:id="@+id/nti_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="H,2:1"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nti_crop_background"/>

        <TextView
            android:id="@+id/nti_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_description"
            android:background="@color/colorAccent"
            android:textColor="@color/colorIcons"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/nti_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/continueLiteral"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/nti_select_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:text="@string/image_selection"
            style="@style/Button"
            app:layout_constraintBottom_toTopOf="@+id/nti_continue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/nti_crop_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:text="@string/crop_background"
            style="@style/Button"
            app:layout_constraintBottom_toTopOf="@+id/nti_select_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
